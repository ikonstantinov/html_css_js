@import'./mixins.styl';
@import'./variables.styl';

$sectionIosBG = #fafafa;
$headerFontSize=3.5rem;
$headerPadding=5rem;
$headerFontSize=2.5rem;
$headerDescriptionFontSize=1.6875rem;
$headerLargeFontSize= 3.5rem
$headerSmallFontSize=1.3125rem;
$sectionMargin=1rem;
$sectionCroppedMaxWidth=1350px;
$textColorSecond=#888;
$linkColorDefault=#4d96d6;
$sectionContentMargin=2rem;
$sectionTwoColumnsPaddingBetween=1rem;
$availabilityColor=#888;
$mainSectionPaddingTop=4.375rem;
$linkColor=#0070c9;

.section
	margin $sectionMargin auto
	box-sizing border-box
	position relative
	&-availability
		color $availabilityColor
		padding-top 0.75rem
		> span
			padding 0 1rem
	&-description
		text-align center
		&_content
			width 80%
			margin 0 auto
	&-header
		font-size $headerFontSize
		&_small
			font-size $headerDescriptionFontSize
		&_description
			font-size $headerSmallFontSize
		&_large
			font-size $headerLargeFontSize
	&-link
		display inline-block
		padding-top 0.75rem
		color $linkColor
		font-size $headerSmallFontSize
		position relative
		text-decoration none
		&:after
			content '>'
			position absolute
			right 0
			top 50%
			transform translate(150%, -17%)
			font-size 1rem
	&-content
		box-sizing border-box
		margin 1rem auto
		position relative
		overflow hidden
		//max-width 1250px
		+xs-mobile()
			max-width 328px
		+mobile()
			max-width 328px
		+mobile-landscape()
			max-width 736px
		+tablet()
			max-width 736px
		+laptop()
			width 736px
		+desktop()
			max-width 980px
	&-cropped
		+xs-mobile()
			margin $sectionContentMargin auto
		+mobile()
			margin $sectionContentMargin auto
		+tablet()
			margin $sectionContentMargin auto
		+laptop()
			margin $sectionContentMargin auto
		+desktop()
			margin $sectionContentMargin auto
			max-width 1350px
	&-img
		background-repeat no-repeat
		background-position center
		background-size contain

	&-iphone-x
		background #f7f7f7
		.section-content
			padding-top $mainSectionPaddingTop
			margin 0 auto
		.section-img
			margin 4rem auto
			+xs-mobile()
				background-image url(../assets/images/iphone_x_small_2x.jpg)
				background-size 336px 71px
				width 336px
				height 71px
			+mobile()
				background-image url(../assets/images/iphone_x_small_2x.jpg)
				background-size 336px 71px
				width 336px
				height 71px
			+tablet()
				background-image url(../assets/images/iphone_x_medium_2x.jpg)
				background-size 649px 136px
				width 649px
				height 136px
			+laptop()
				background-image url(../assets/images/iphone_x_medium_2x.jpg)
				background-size 649px 136px
				width 649px
				height 136px
			+desktop()
				background-image url(../assets/images/iphone_x_large_2x.jpg)
				width 981px
				height 206px
				background-size 981px 206px

	&-iphone-8
		background-color #f9f0eb
		.section-content
			padding-top $mainSectionPaddingTop
			margin 0 auto
		.section-img
			margin 0 auto
			+xs-mobile()
				background-image url(../assets/images/iphone_8_small_2x.jpg)
				background-size 321px 229px
				width 321px
				height 229px
			+mobile()
