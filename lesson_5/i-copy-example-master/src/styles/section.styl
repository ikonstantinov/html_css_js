				height 383px
			+laptop()
				background-image url(../assets/images/iphone_8_medium_2x.jpg)
				background-size 476px 383px
				width 476px
				height 383px
			+desktop()
				background-image url(../assets/images/iphone_8_large_2x.jpg)
				width 611px
				height 498px
				background-size 611px 498px

	&-compare
		background-color #fafafa
		margin-top 2rem
		.section-description
			text-align left
			margin initial
			+laptop()
				display flex
				align-items stretch
				flex-direction column
				justify-content center
			+desktop()
				display flex
				align-items stretch
				flex-direction column
				justify-content center
		.section-img
			margin 0 auto
			margin-top 2rem
			align-self flex-end
			+xs-mobile()
				background-image url(../assets/images/compare_small_2x.jpg)
				background-size 303px 275px
				width 303px
				height 275px
			+mobile()
				background-image url(../assets/images/compare_small_2x.jpg)
				background-size 303px 275px
				width 303px
				height 275px
			+tablet()
				background-image url(../assets/images/compare_medium_2x.jpg)
				background-size 457px 349px
				width 457px
				height 349px
			+laptop()
				background-image url(../assets/images/compare_medium_2x.jpg)
				background-size 476px 349px
				width 476px
				height 349px
			+desktop()
				display inline-flex
				background-image url(../assets/images/compare_large_2x.jpg)
				width 587px
				height 449px
				background-size 587px 449px

	&-ios
		background-color #fafafa
		margin-top 2rem
		justify-content center
		//+xs-mobile()
		//+mobile()
		//+laptop()
		+desktop()
			height 700px
			justify-content flex-start
		.section-description
			+laptop()
				display flex
				align-items stretch
				flex-direction column
				justify-content center
			+desktop()
				display flex
				align-items stretch
				flex-direction column
				justify-content center
		.section-img
			margin 0 auto
			margin-top 2rem
			align-self flex-end
			+xs-mobile()
				background-image url(../assets/images/ios_small_2x.jpg)
				background-size 322px 291px
				width 322px
				height 291px
			+mobile()
				background-image url(../assets/images/ios_small_2x.jpg)
				background-size 322px 291px
				width 322px
				height 291px
			+tablet()
				background-image url(../assets/images/ios_medium_2x.jpg)
				background-size 577px 484px
				width 577px
				height 484px
			+laptop()
				background-image url(../assets/images/ios_medium_2x.jpg)
				background-size 577px 484px
				width 577px
				height 484px
			+desktop()
				position absolute
				right -10%
				top 50%
				transform translateY(-50%)
				display inline-flex
				background-image url(../assets/images/ios_large_2x.jpg)
				width 828px
				height 527px
				background-size 828px 527px
				margin-top 0

	&-two-column
		//min-height 600px
		.subsection
			height 550px
			background #fafafa
			+laptop()
				height 400px
		> *
			&:nth-child(odd)
				padding-right $sectionTwoColumnsPaddingBetween
				+xs-mobile()
					padding 0
				+mobile()
					padding 0
				+tablet()
					padding 0
				+mobile-landscape()
					flex-basis 100%

			&:nth-child(even)
				padding-left $sectionTwoColumnsPaddingBetween
				+xs-mobile()
					padding 0
				+mobile()
					padding 0
				+tablet()
					padding 0
				+mobile-landscape()
					flex-basis 100%
		.section-description
			text-align center
			position relative
			z-index 1
			padding-top 4rem
		.section-airpods
			position relative
			.section-img
				margin-top 2rem
				align-self flex-end
				+xs-mobile()
					background-image url(../assets/images/airpods_small_2x.jpg)
					background-size cover
					width 100%
					height 50%
				+mobile()
					background-image url(../assets/images/airpods_small_2x.jpg)
					background-size cover
					width 100%
					height 50%
				+mobile-landscape()
					height 90%
					position absolute
					bottom 0
					background-size cover
					width 100%
				+tablet()
					background-image url(../assets/images/airpods_medium_2x.jpg)
					background-size cover
					width 100%
					height 80%
					position absolute
					bottom 0
				+laptop()
					background-image url(../assets/images/accessories_medium_2x.jpg)
					width 100%
					height 60%
					position absolute
					bottom 0
					background-position top
				+laptop()
					background-image url(../assets/images/airpods_medium_2x.jpg)
					background-size cover
					width 100%
					height 50%
					background-position top
				+desktop()
					position absolute
					bottom 0
					display inline-flex
					background-image url(../assets/images/airpods_large_2x.jpg)
					background-size cover
					width calc(100% - 1rem)
					height 60%
					margin-top 0
					background-position top
		.section-accessories
			position relative
			+xs-mobile()
				margin-top 2rem
			+mobile()
				margin-top 2rem
			+tablet()
				margin-top 2rem
			.section-img
				margin-top 2rem
				align-self flex-end
				background-size cover
				+xs-mobile()
					background-image url(../assets/images/accessories_small_2x.jpg)
					width 100%
					height 60%
				+mobile()
					background-image url(../assets/images/accessories_small_2x.jpg)
					width 100%
					height 60%
				+mobile-landscape()
					height 100%
					position absolute
					bottom 0
					width 100%
				+tablet()
					background-image url(../assets/images/accessories_medium_2x.jpg)
					position absolute
					bottom 0
					width 100%
					height 100%
				+tablet-landscape()
					position absolute
					bottom 0
					width 100%
					background-position top
				+laptop()
					background-image url(../assets/images/accessories_medium_2x.jpg)
					width 100%
					height 75%
					position absolute
					bottom 0
					background-position top
				+desktop()
					position absolute
					bottom 0
					background-image url(../assets/images/accessories_large_2x.jpg)
					width 100%
					height 80%
					z-index 0
					margin-top 0
					background-position top
	&-how-to-shoot
		background-size cover
		background-repeat no-repeat
		background-position center
		+xs-mobile()
			background-image url(../assets/images/howtoshoot_small_2x.jpg)
			height 570px
		+mobile()
