@import'./mixins.styl';
@import'./variables.styl';
.chapter-nav
	background $sectionBG
	&-content
		list-style none
		display flex
		justify-content center
		contentCenterMaxWidth()
	&-item
		height 86px
		width 60px
		padding 0.5rem
		&_link
			display flex
			height 100%
			width 100%
			text-decoration none
			font-size 8px
			flex-direction column
			justify-content center
			color $defaultTextColor
		&_img
			width 100%
			height 50%
			> .img
				background-size contain
				background-repeat no-repeat
				background-position center
				width 100%
				height 100%
		&_label
			padding-top 10px
			text-align center
			width 100%
			height 20%

