@import'./mixins.styl';
@import'./variables.styl';

.global-nav
	background-color $defaultTextColor
	&-content
		width 100%
		height 48px
		contentCenterMaxWidth()
	&-list
		display flex
		list-style none
		height 100%
		&-item
			flex-grow 1
			text-align center
			display flex
			flex-direction column
			height 100%
			> a
				display flex
				color #FFF
				flex-grow 1
				justify-content center
				align-content center
				flex-direction column
				height 100%
				text-decoration none
				font-size 12px
				transition all .5s
				&:hover
					opacity .65
				> .img
					background-size contain
					background-repeat no-repeat
					background-position center
					width 100%
					height 100%